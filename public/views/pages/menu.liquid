---
layout: modules/components/styleguide
---
{% liquid
  function components_query_result = 'modules/components/lib/queries/get_components'
  assign categories = '["atoms", "molecules", "organisms" ]' | parse_json
%}

<div class="flex h-screen antialiased text-gray-900 bg-gray-100">
  <aside class="flex-shrink-0 w-64 bg-white border-r md:block">
    <div class="flex flex-col h-full">
      <nav aria-label="Main" class="flex-1 px-2 py-4 space-y-2 overflow-y-hidden hover:overflow-y-auto">
        {% for category in categories %}
        <div>
          <a href="#{{ category }}"
            class="flex items-center p-2 text-gray-500 transition-colors rounded-md hover:bg-blue-200"
            role="button" aria-haspopup="true">
            <span aria-hidden="true">
              <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
              </svg>
            </span>
            <span class="ml-2 text-sm"> {{ category | humanize }} </span>

          </a>
          <div class="mt-2 space-y-2 px-7" role="menu" arial-label="Components">
            {% for component in components_query_result[category].results %}
            <a href="#{{ component.metadata.name }}#" role="menuitem"
              class="block p-2 text-sm text-gray-400 transition-colors duration-200 rounded-md hover:text-gray-700 hover:bg-blue-100">
              {{component.metadata.name | humanize }}
            </a>
            {% endfor %}
          </div>
        </div>
        {% endfor %}
      </nav>
    </div>
  </aside>

  <div>asdasda</div>
</div>
