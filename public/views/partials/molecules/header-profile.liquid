---
metadata:
  name: Header profile
  params:
    imageSrc: ""
    name: "John Doe"
  styleguide:
    - imageSrc: "https://i.pravatar.cc/150?img=13"
      name: "John Doe"
    - imageSrc: "https://i.pravatar.cc/150?img=5"
      name: "Jane Doe"
    - name: "Harrison Ford"
      size: "md"
---
{% liquid
  assign size = params.size | default: 'md'
  assign name = params.name
  assign imageSrc = params.imageSrc

  assign classes = 'px-3 py-1 leading-5 rounded flex items-center align-center h-8 bg-base '

  assign avatar_params = null | hash_merge: size: 'sm', name: name, imageSrc: imageSrc
  assign names = name | split: " "
%}
<div class="inline-block">
  <div class="{{classes}}">
    <div class="pr-2">
      {{names[0]}}
    </div>
    {% theme_render_rc 'components/atoms/avatar', params: avatar_params %}
  </div>
</div>

