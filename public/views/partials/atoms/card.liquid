---
metadata:
  name: Card
  params:
    tag: "div"
    variant:
      - default
      - highlighted
    content: This is an example card
---
{% liquid
  assign tag = params.tag | default: 'div'
  assign variant = params.variant | default: 'default'
  assign content = params.content

  assign classes = 'p-6 rounded shadow-card'

  if variant == 'highlighted'
    assign classes = classes | append: ' bg-highlighted'
  else
    assign classes = classes | append: ' bg-panel'
  endif
%}
<{{tag}} class="{{classes}}">
  {% print content %}
</{{tag}}>
