{% comment %}
params:
  tag: HTML tag (default: button)
  variant: primary | secondary | tertiary (default: primary)
  size: normal | small (default: normal)
  disabled: boolean (default: false)
  content: string
  attributes: object
{% endcomment %}
{% liquid
  assign tag = tag | default: 'button'
  assign variant = variant | default: 'primary'
  assign size = size | default: 'normal'
  assign disabled = disabled | default: false

  assign classes = 'font-bold py-2 px-4'

  if variant == 'primary'
    assign classes = classes | append: ' bg-blue-500 hover:bg-blue-700 text-white rounded'
  elsif variant == 'secondary'
    assign classes = classes | append: ' bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded-full'
  endif

  if disabled == true
    assign classes = classes | append: ' opacity-50 cursor-not-allowed'
  endif
%}
<{{tag}}
  class="{{classes}}"
  {% for attribute in attributes %}
  {{ attribute[0] }}="{{ attribute[1] }}"
  {% endfor %}
  {% if disabled %}disabled{% endif %}
>{{content}}</{{tag}}>

