---
metadata:
  name: Backdrop
  params:
    content: ''
    hidden:
      - true
      - false
    backdrop_id: 'myBackdropId'
  styleguide:
    - content: ''
---
{% liquid
  assign content = params.content
  assign hidden = params.hidden | default: false
  assign backdrop_id = params.backdrop_id

  assign classes = params.classes | append: ' w-screen h-screen fixed inset-0 flex items-center justify-center bg-colorful bg-opacity-30'
  if hidden == true
    assign classes = classes | append: ' hidden'
  endif
%}
<div data-backdrop-id="{{backdrop_id}}" class="{{classes}}">
  {% print content %}
</div>
